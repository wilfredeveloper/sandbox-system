# ===================================================================
# Sandbox Server v2 - Local Development Configuration
# ===================================================================
# This is a working .env file with sensible defaults for local development
# Adjust values as needed for your environment

# ===================================================================
# Server Configuration
# ===================================================================
PORT=7575
HOST=0.0.0.0
DEBUG=false
WORKER_ID=standalone

# ===================================================================
# Container Pool Configuration
# ===================================================================
# Smaller pool for local development to save resources
POOL_SIZE=5
MIN_POOL_SIZE=2
MAX_POOL_SIZE=20

# ===================================================================
# Container Resource Limits
# ===================================================================
CONTAINER_IMAGE=sandbox-secure:latest
MEMORY_LIMIT=256m
CPU_QUOTA=25000
SANDBOX_USER=sandboxuser
WORKSPACE_DIR=/workspace

# ===================================================================
# Timeout Configuration
# ===================================================================
SESSION_TIMEOUT_MINUTES=30
CONTAINER_IDLE_TIMEOUT_MINUTES=10
CLEANUP_INTERVAL_SECONDS=300
DEFAULT_COMMAND_TIMEOUT=30

# ===================================================================
# Pool Management Strategy
# ===================================================================
# Aggressive cleanup enabled for local dev to save resources
AGGRESSIVE_CLEANUP=true
POOL_REFILL_DELAY_SECONDS=60

# ===================================================================
# Redis Configuration (for distributed setup)
# ===================================================================
# Leave empty for standalone mode (local development)
REDIS_HOST=
REDIS_PORT=6379

# ===================================================================
# Docker Configuration
# ===================================================================
# No network access for security
DOCKER_NETWORK_MODE=none

# ===================================================================
# File and Workspace Limits
# ===================================================================
MAX_FILE_SIZE_MB=100
MAX_TOTAL_FILES=1000
MAX_WORKSPACE_SIZE_MB=500

